<section class="p-10">
    <h1 class="text-center font-semibold text-2xl text-gray-800">{{ section.settings.collection_list_title}}</h1>

    <div class="grid grid-cols-3 px-10 mt-5">
        {% for collection in collections %}
            {% if collection.all_products_count > 0 %}
                <div class="m-5 flex flex-col border">
                    <a href="{{ collection.url }}">
                        {% if collection.featured_image != blank %}

                            {% assign collection_image = collection.featured_image %}

                            {% else %}
                                {% assign collection_image = collection.products.first.image %}
                        {% endif %}

                        <img  class="w-full mx-auto" src="{{collection_image | img_url }}" alt="" height="auto" width="auto">
    
                    </a>
    
                    <p class="mt-10 text-center text-gray-700 text-lg">{{ collection.title }}</p>
                </div>
            {% endif %}
          
            
        {% endfor %}
    </div>
</section>








{% schema %}
    {
        "settings": [
            {
            "type": "text",
            "id": "collection_list_title",
            "default": "Collection List",
            "label": "Title"
            }
        ]
    }
{% endschema %}