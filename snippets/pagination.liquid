{% if pagination.pages > 0 %}
  <nav role="navigation" class="mx-auto justify-center flex mb-20">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}">{{ pagination.previous.title }}</a>
    {% endif %}

    {% for part in pagination.parts %}
      {% if part.is_link %}
        <a class="px-1" href="{{ part.url }}">{{ part.title }}</a>
      {% else %}
        <span class="px-1" href="{{ part.url }}">{{ part.title }}</span>
      {% endif %}
    {% endfor %}

    {% if pagination.next %}
      <a href="{{ pagination.next.url }}">{{ pagination.next.title }}</a>
    {% endif %}
  </nav>
{% endif %}
